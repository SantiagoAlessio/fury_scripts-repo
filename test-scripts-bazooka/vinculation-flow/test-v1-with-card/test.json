{
    "config":{
        "target": "stress-test-master.wallet-agreement-manager.melifrontends.com",
        "tls": {
            "rejectUnauthorized": false
        },
        "http": {
            "timeout": 60
        },
        "phases": [
            {
                "name": "first step",
                "duration": 60,
                "arrivalRate": 1
            },
            {
                "name":"second step",
                "duration": 60,
                "arrivalRate": 2
            }
        ],
        "payload": 
        {
            "path": "sellerWithCard.csv",
            "fields": [
                "ClientId",
                "returnUri",
                "CallerId",
                "CollId",
                "PublicKey"
            ],
            "order":"sequence"
        },
        "processor": "functions.js"
    },
    "scenarios":[{
        "name":"flow V1 only AM",
        "flow":[
            {
                "post": {
                    "url": "/wallet_agreement?client.id={{ ClientId }}",
                    "json":{
                        "return_uri":"{{ returnUri }}",
                        "status":"state"
                    },
                    "capture": [
                        {
                            "json": "$.id",
                            "as": "agreementId"
                        }
                    ]
                }
            },
            {
                "get":{
                    "url": "/wallet_agreement/{{agreementId}}"
                }
            },
            {
                "put":{
                    "url": "/wallet_agreement/{{agreementId}}",
                    "json":{
                        "status":"WAITING_USER_CONFIRMATION"
                    }
                }
            },
            {
                "post":{
                "url":"https://api.mercadopago.com/v1/card_tokens?public_key= {{ PublicKey }}",
                "json": {
                    "card_number":"5031755734530604",
                    "security_code": "123",
                    "expiration_month":11,
                    "expiration_year":2025,
                    "site_id":"MLA",
                    "cardholder": {
                        "name":"apro",
                        "identification": {
                            "type":"DNI",
                            "number":"11111111"
                        }
                    }
                },
                "afterResponse":"debugResponse",
                "capture":[
                    {
                        "json": "$.id",
                        "as": "CardToken"
                    }
                ]
            }
            },
            {
                "post":{
                    "url":"/wallet_agreement/verify/card?client.id={{ ClientId }}&caller.id={{ CallerId }}&collector.id={{ CollId }}&agreement_id={{ agreementId }}&site_id=MLA",
                    "json": {
                        "token": "{{ CardToken }}",
                        "issuer_id": 3,
                        "payment_method_id": "master",
                        "installments": 1
                    }
                }
            },
            {
                "post":{
                    "url": "/wallet_agreement/code?client.id={{ ClientId }}&caller.id={{ CallerId }}",
                    "json": {
                        "user_id":"{{ CallerId }}",
                        "agreement_id":"{{ agreementId }}",
                        "payment_preference": {
                            "active":true,
                            "payment_method": [
                                {
                                    "priority": 1, 
                                    "payment_method": "account_money" 
                                },
                                {
                                    "priority": 2,
                                    "payment_method": "card"
                                }
                            ]
                        }
                    },
                    "afterResponse": "obtainCode"
                }
            },
            {
                "post":{
                    "url": "/wallet_agreement/token",
                    "headers":{
                        "x-client-id":"{{ ClientId }}"
                    },
                    "json": {
                        "client_secret":"{{ agreementId }}",
                        "code":"{{ validationCode }}",
                        "return_uri":"{{ returnUri }}",
                        "grant_type":"authorization_code" 
                    },
                    "capture": [
                        {
                            "json": "$.payer_token",
                            "as": "payerToken"
                        }
                    ]
                }
            },
            {
                "log":"para user {{ CallerId }} agreement obtenido {{agreementId}} y payer token {{ payerToken }}"
            }
        ]
    }
    ]
}