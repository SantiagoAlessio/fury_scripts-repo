{
    "config":{
        "target": "https://internal-api.mercadopago.com",
        "tls": {
            "rejectUnauthorized": false
        },
        "http": {
            "timeout": 60
        },
        "phases": [
            {
                "name": "first step",
                "duration": 10,
                "arrivalRate": 10
            }
        ],
        "payload": 
        {
            "path": "sellerWithCard.csv",
            "fields": [
                "CardToken",
                "ClientId",
                "returnUri",
                "CallerId",
                "CollId"
            ],
            "order":"sequence"
        },
        "processor": "functions.js"
    },
    "scenarios":[{
        "name":"flow V1 only AM",
        "flow":[
            {
                "post": {
                    "url": "/beta/wallet_agreement?client.id={{ ClientId }}",
                    "json":{
                        "return_uri":"{{ returnUri }}",
                        "status":"state"
                    },
                    "afterResponse":"debugResponse",
                    "capture": [
                        {
                            "json": "$.id",
                            "as": "agreementId"
                        }
                    ]
                }
            },
            {
                "get":{
                    "url": "/beta/wallet_agreement/{{agreementId}}"
                }
            },
            {
                "put":{
                    "url": "/beta/wallet_agreement/{{agreementId}}",
                    "json":{
                        "status":"WAITING_USER_CONFIRMATION"
                    }
                }
            },
            {
                "post":{
                    "url":"/beta/wallet_agreement/verify/card?client.id={{ ClientId }}&caller.id={{ CallerId }}&collector.id={{ CollId }}&agreement_id={{ agreementId }}&site_id=MLA",
                    "json": {
                        "token": "{{ CardToken }}",
                        "issuer_id": 3,
                        "payment_method_id": "master",
                        "installments": 1
                    },
                    "afterResponse":"debugResponse"
                }
            },
            {
                "post":{
                    "url": "/beta/wallet_agreement/code?client.id={{ ClientId }}&caller.id={{ CallerId }}",
                    "json": {
                        "user_id":"{{ CallerId }}",
                        "agreement_id":"{{ agreementId }}",
                        "payment_preference": {
                            "active":true,
                            "payment_method": [
                                {
                                    "priority": 1, 
                                    "payment_method": "account_money" 
                                },
                                {
                                    "priority": 2,
                                    "payment_method": "card"
                                }
                            ]
                        }
                    },
                    "afterResponse": "obtainCode"
                }
            },
            {
                "post":{
                    "url": "/beta/wallet_agreement/token",
                    "headers":{
                        "x-client-id":"{{ ClientId }}"
                    },
                    "json": {
                        "client_secret":"{{ agreementId }}",
                        "code":"{{ validationCode }}",
                        "return_uri":"{{ returnUri }}",
                        "grant_type":"authorization_code" 
                    },
                    "capture": [
                        {
                            "json": "$.payer_token",
                            "as": "payerToken"
                        }
                    ]
                }
            },
            {
                "log":"para user {{ CallerId }} agreement obtenido {{agreementId}} y payer token {{ payerToken }}"
            }]
    }]
}